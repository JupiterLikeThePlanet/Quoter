<div class='margin_header'>
  <h1>Contacts</h1>
</div>

<div class ="container center_div" align ='center'>
  <div >
  <div align="left">
    <%= link_to "< Back", user_url(current_user), method: :get %>
  </div>

  <br>

  <%= link_to "Add Contact", new_contact_path, method: :get %>

  <ul>
    <% @contacts.each do |contact| %>
      <div class ="contact">
        <li><%=contact.first_name + " " + contact.last_name + " | " + contact.number%>
          <p align = "right"><%= link_to "Edit", edit_contact_path(contact), method: :get %> |
          <%= link_to "Delete", contact_path(contact), method: :delete, data: { confirm: "You sure?"} %></p></li>
      </div>
    <%end%>
  </ul>




</div>



