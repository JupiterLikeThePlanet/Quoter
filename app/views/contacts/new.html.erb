<div class="margin_header">
  <div class="row">

    <div class="col-sm-12 col-xs-12">
      <h1>Add New Contact</h1>
    </div>

  </div>
</div>
<div class="container center_div">

  <%= form_for @contact, :html => {:class => "form-horizontal center"} do |f| %>
  <% if @contact && @contact.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:
        </h2>
        <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <br>

      <div class="form-group">

        <%= f.label :first_name, "First Name: ", class: "col-sm-3 col-xs-4 control-label" %>

        <div class="col-sm-8">
          <%= f.text_field :first_name, class: "form-control"  %>
        </div>

      </div>

      <div class="form-group">
        <%= f.label :last_name, "Last Name: ", class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :number, "Number: ", class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :number, class: "form-control" %>
        </div>
      </div>

      <br>

      <div class="row">
        <div class=" pull-right col-sm-3 hidden-xs" style="margin-right: 5%">
          <%= f.submit class: "btn btn-default" %>
          <!--form-group pull-right col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-4-->
        </div>
      </div>

      <div class="row">
        <div class=" hidden-xl hidden-lg hidden-md hidden-sm col-sm-3 col-xs-3"">
          <%= f.submit class: "btn btn-default" %>
          <!--form-group pull-right col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-4-->
        </div>
      </div>

      <br>

  <% end %>

  <%= link_to "< Back", user_url(current_user), method: :get %>

</div>


