<h5>Sign up</h5>

<%= form_for :user, url: '/users/new' do |f| %>

  <p>
    <%=f.label :email %>
    <%=f.text_field :email %>
  </p>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <% f.label :last_name %>
    <% f.text_field :last_name %>
  </p>

  <p>
    <%=f.label :password %>
    <%=f.password_field :password %>
  </p>

  <p>
     <%= f.submit "Sign up", class: 'button tiny radius' %>
  </p>
<% end %>