<div class="margin_header">
  <h1>Send a message</h1>
</div>
<div class="container center_div" align ='center'>
  <div align = "left">
    <%= link_to "< Back", user_url(current_user), method: :get %>
  </div>


  <form class="center" action="/messages" method="POST">

      <div class="form-group  col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 centered">
        <p>Select a Contact</p>
        <div style="">
          <select class="form-control input-medium" name="id">
            <% @contacts.each do |contact| %>
                <option class="" value="<%= contact.id %>"><%= contact.first_name + " " + contact.last_name %></option>
            <% end %>
          </select>
        </div>

        <br>

        <p>Send a Quote or a Joke</p>

        <select class="form-control" name="api_id">
            <% @source.each do |source| %>
              <option class="" value="<%= source.id %>"><%= source.name %></option>
            <%end%>
        </select>

        <br>

        <input type="submit" class="btn btn-default" value="Submit">

      </div>

    </form>




</div>

